<%= form_tag("/login_action") do %>
<div class="form">
  <% if @user %>
    <% @user.errors.full_messages.each do |message| %>
      <div class="form-error">
        <%= message %>
      </div>
    <% end %>
  <% end %>
  <p>ユーザー名</p>
  <input name="name">
  <!-- <p>画像</p> -->
  <!-- <input name="image_name" type="file"> -->
  <p>メールアドレス</p>
  <input name="mail_address">
  <input type="submit" value="ログイン">
</div>
<% end %>
