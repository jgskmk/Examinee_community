<%= form_tag("/create_user",{multipart:true}) do %>
<div class="container">
  <div class="row">
    <div class="form">
      <% if @user %>
        <% @user.errors.full_messages.each do |message| %>
          <div class="form-error">
            <%= message %>
          </div>
        <% end %>
      <% end %>
      <p>ユーザー名</p>
      <input name="name" size="40" placeholder="20文字まで入力可能です">
      <p>メールアドレス</p>
      <input name="mail_address" size="40" placeholder="info@example.com">
      <p>パスワード</p>
      <input type="password" name="password" size="40">
      <p>プロフィール画像</p>
      <input name="image" type="file">
      <input type="submit" value="新規登録" class="btn btn-primary ">
    </div>
  </div>
</div>
<% end %>
