<%= form_tag("/update_post/#{@post.id}") do %>
<div class="form">
  <textarea name="content" rows="8" cols="80" ><%= @post.content %></textarea>
  <input type="submit" value="編集">
</div>
<% end %>
<%= link_to"投稿の削除","/post/destroy/#{@post.id}", method: :delete, data: {confirm: "投稿を削除してもよろしいですか？"}  %>
